String author= "CST 112 Felix Gonzales";
float r=random(255), g=random(255), b=random(255);
int an;


int[] n= {an, an, an, an, an, an, an, an, an};
int nums= n.length;

void setup() {

  size (700, 500);

  for (int j=0; j<nums; j++) {
    n[j]=  int( random( 0, 1000 ) );
  }
}

void draw() {
  background(r, g, b);
  display();
}

void biggest() {


  int biggest( int a[], int allN ) {
  }
}
int adding( int a[], int allN ) {
  int result=0;
  for (int i=0; i<allN; i++ ) {
    result += a[i];
  }
  return result;
}

void display() {
  float x=70, y= 70;
  for (int i = 0; i<nums; i++) {
    fill(255, 255, 255);
    text(n[i], x, y);
    y = y +20;
  }
  y = y +40;

  float addition = adding( n, nums);
  float average= addition/nums;
  text ("The total sum of all numbers is: "+ addition, 70, y);
  y = y+40;
  text ("The average of all numbers is: " + average, 70, y);
}


void keyPressed() {
  if ( key == 'c') change(n, nums) ;
}


void change( int a[], int m ) {
  // Replace all numbers of random values.
  for (int j=0; j<m; j++) {
    a[j]=  int( random( 0, 1000 ) );
  }
}
